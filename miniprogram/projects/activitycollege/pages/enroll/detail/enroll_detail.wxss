@import "../../../style/skin.wxss";
@import "../../../../../style/public/detail.wxss";
@import "/cmpts/public/calendar/calendar_comm/din.wxss";

.main {
	padding: 0 !important;
}

.top {
	width: 100%;
	background-color: var(--projectColor);
	padding: 60rpx 35rpx 110rpx;
	border-radius: 0% 0% 72% 39% / 10% 11% 16% 0%;
	box-shadow: 0rpx 15rpx 8px -10rpx rgba(236, 232, 28, 0.4);
	display: flex;
	align-items: flex-start;
}

.top .left {
	width: 160rpx;
	height: 160rpx;
	border-radius: 20rpx;
	border: 0rpx solid #5B02FF;
	margin-right: 30rpx;
}

.top .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
}

.top .right .title {
	width: 100%;
	font-size: 36rpx;
	font-weight: bold;
	color: #fff;
}

.top .right .desc {
	width: 100%;
	font-size: 24rpx;
	color: rgb(255, 255, 255, 0.7);
	padding: 10rpx 0 0;
	font-family: 'din';
}


.top .right .oprt {
	width: 100%;
}

.detail {
	width: 100%;
	padding: 0 30rpx;
	margin-top: -70rpx;
	z-index: 9;
	margin-bottom: 150rpx;
}

.detail .inner {
	width: 100%;
	min-height: 400rpx;
	border-radius: 30rpx;
	background-color: #fff;
	overflow: hidden;
}

.detail .inner .line {
	width: 100%;
	display: flex;
	padding: 30rpx 0;
	align-items: center;
	justify-content: space-around;
	font-size: 30rpx;
	color: #333;
	background-image: linear-gradient(0deg, #ffffff, #eee);
	height: 100rpx;
}

.detail .inner .line .item {
	width: 25%;
	display: flex;
	align-items: center;
	justify-content: center;
	height: inherit;
}

.detail .inner .number {
	width: 100%;
	text-align: center;
	font-size: 28rpx;
	color: #999;
	font-weight: normal;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 10rpx 40rpx;
}

.detail .inner .number .more {
	font-size: 24rpx;
	color: #999;
}

.detail .inner .more-data {
	width: 100%;
	display: flex;
	justify-content: center;
}

.detail .inner .more-data>view {
	font-size: 28rpx;
	color: #999;
	width: 60%;
	background-color: #f8f8f8;
	text-align: center;
	padding: 15rpx 0;
	border-radius: 10rpx;
}

.detail .inner .line .cur {
	color: #333;
	font-weight: bold;
	font-weight: 34rpx;
	background-color: #fff;
	border-radius: 20rpx;
}

.detail .inner .time {
	width: 100%;
	padding: 10rpx 20rpx;
}

.detail .inner .time .date-select {
	white-space: nowrap;
}

.detail .inner .time .date-select .item {
	margin: 10rpx 20rpx 10rpx 0rpx;
	text-align: center;
	font-size: 24rpx;
	line-height: 55rpx;
	height: 110rpx;
	width: 105rpx;
	border: 2rpx solid #FFF2F0;
	border-radius: 40rpx;
	display: inline-block;
	background-color: #FFF2F0;
}

.detail .inner .time .date-select .item .month {
	font-size: 24rpx;
	color: #eb9a9a;
}

.detail .inner .time .date-select .item .date {
	font-size: 34rpx;
	color: #eb9a9a;
	font-family: 'din';
	font-weight: bold;
	margin-top: -8rpx;
}

.detail .inner .article .date {
	width: 100%;
	padding: 18rpx 20rpx;
	font-size: 28rpx;
	background-color: #f2f2f2;
	border-radius: 10rpx;
	color: #666;
	margin-bottom: 10rpx;
}

.detail .inner .time .date-select .item.cur {
	border: 2rpx solid var(--projectColor);
	background-color: var(--projectColor);
	box-shadow: 1rpx 8rpx 8rpx rgba(139, 138, 138, 0.3);
}

.detail .inner .time .date-select .item.cur .month,
.detail .inner .time .date-select .item.cur .date {
	color: #fff;
}

.detail .inner .time .date-select .item.today {
	border: 2rpx solid #fb454c;
	background-color: #fff;
}

.detail .inner .time .date-select .item.today .month,
.detail .inner .time .date-select .item.today .date {
	color: #fb454c;
}

.detail .inner .users {
	width: 100%;
	padding: 40rpx 30rpx;
	display: flex;
	flex-wrap: wrap;
	justify-content: flex-start;
}

.detail .inner .no {
	width: 100%;
	display: flex;
	justify-content: center;
	font-size: 26rpx;
	color: #999;
	align-items: center;
}

.detail .inner .users .item {
	width: calc((100% - 90rpx) / 4);
	margin-right: 30rpx;
	margin-bottom: 50rpx;
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
}

.detail .inner .users .item:nth-child(4n+4) {
	margin-right: 0rpx;
}

.detail .inner .users .item image {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	box-shadow: 6rpx 6rpx 14rpx rgba(226, 43, 68, 0.3);
}

.detail .inner .users .item .name {
	position: absolute;
	bottom: 0;
	right: 0;
	background-color: #FFF2F0;
	color: var(--projectColor);
	font-size: 20rpx;
	border-radius: 10rpx;
	padding: 0 10rpx;
	max-width: 100rpx;
	text-overflow: clip;
}

.detail .inner .rank {
	width: 100%;
	padding: 40rpx 30rpx;
	display: flex;
	flex-direction: column;
}

.detail .inner .rank .item {
	display: flex;
	margin-bottom: 35rpx;
}

.detail .inner .rank .item .no {
	width: 60rpx;
	font-weight: bold;
	font-size: 30rpx;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	color: #999;
	padding-left: 0rpx;
	font-family: 'din';
}

.detail .inner .rank .item:nth-child(1) .no {
	color: var(--red);
}

.detail .inner .rank .item:nth-child(2) .no {
	color: var(--orange);
}

.detail .inner .rank .item:nth-child(3) .no {
	color: var(--yellow);
}

.detail .inner .rank .left {
	width: 90rpx;
	height: 90rpx;
	border-radius: 15rpx;
	margin-right: 20rpx;
}

.detail .inner .rank .right {
	flex: 1;
	display: flex;
	flex-direction: column;
}


.detail .inner .rank .right .name {
	width: 100%;
	color: #333;
	font-size: 30rpx;
	font-weight: bold;
	padding: 2rpx 0 14rpx;
	width: 400rpx;
}

.detail .inner .rank .right .desc {
	width: 100%;
	color: #999;
	font-size: 24rpx;
}

.bottom {
	position: fixed;
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	bottom: 50rpx;
	z-index: 9999;
}

.bottom .inner {
	background-image: linear-gradient(180deg, var(--projectColorLight), var(--projectColor));
	padding: 20rpx 100rpx;
	border-radius: 40rpx;
	color: #fff;
	font-size: 30rpx;
	box-shadow: 6rpx 6rpx 14rpx rgba(201, 198, 199, 0.5);
}

.bottom .inner.over {
	padding: 20rpx 50rpx;
	background-image: linear-gradient(180deg, #eee, #f8f8f8);
	border: 2rpx solid #999;
	color: #333;
}

.cmpt-biz-detail-mode-btn>view,
.cmpt-biz-detail-mode-btn>button {
	font-size: 24rpx;
	margin-right: 20rpx;
	padding: 6rpx 25rpx;
	border-radius: 30rpx;
	border: 2rpx solid #5B02FF;
	background-color: #FF517F;
}


.list {
	width: 100%;
	display: flex;
	flex-direction: column;
	padding: 25rpx 25rpx;
}

.list .item {
	width: 100%;
	display: flex;
	padding: 15rpx;
	background-color: #fff;
	margin-bottom: 15rpx;
	align-items: flex-start;
	border-bottom: 2rpx dotted #eee;
}

.list .left {
	width: 90rpx;
	height: 90rpx;
	border-radius: 20%;
	margin-right: 10rpx;
}

.list .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	padding: 6rpx 10rpx;
}

.list .right .title {
	display: flex;
	padding: 0;
	justify-content: space-between;
	align-items: center;
}

.list .right .title .name {
	font-size: 26rpx;
	color: #000;
}

.list .right .title .date {
	font-size: 24rpx;
	color: #ccc;
}

.list .right .content {
	margin-top: 15rpx;
	width: 100%;
	display: flex;
	font-size: 26rpx;
	line-height: 1.3;
	color: #888;
}

.list .right .album {
	margin-top: 20rpx;
	width: 100%;
	display: flex;
	flex-wrap: wrap;
}

.list .right .album image {
	height: 120rpx;
	width: 120rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	border-radius: 10rpx;
}

.list .right .album image.img1 {
	height: 230rpx;
	width: 230rpx;
}

.list .right .album image.img2 {
	height: 200rpx;
	width: 200rpx;
}

.list .right .album image.img3,
.list .right .album image.img4,
.list .right .album image.img5,
.list .right .album image.img6,
.list .right .album image.img7,
.list .right .album image.img8,
.list .right .album image.img9 {
	height: 170rpx;
	width: 170rpx;
}

.list .right .oprt {
	width: 100%;
	display: flex;
	justify-content: flex-end;
	padding: 5rpx 0;
}

.cmpt-biz-detail-mode-btn>view,
.cmpt-biz-detail-mode-btn>button {
	border: 0rpx solid #999999 !important;
}